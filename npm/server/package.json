{
  "name": "@bgql/server",
  "version": "0.1.0",
  "description": "Type-safe GraphQL server for bgql schemas",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts",
    "dev": "tsdown src/index.ts --format esm --dts --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "fmt": "oxfmt --write src",
    "fmt:check": "oxfmt --check src"
  },
  "dependencies": {
    "graphql": "^16.8.0"
  },
  "devDependencies": {
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "@types/node": "^20.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20250122",
    "tsdown": "^0.9.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {},
  "keywords": [
    "graphql",
    "server",
    "typescript",
    "bgql"
  ],
  "author": "ubugeeei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubugeeei/bgql"
  }
}
