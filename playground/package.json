  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@typescript/native-preview": "^7.0.0-dev.20250122",
    "@nicolo-ribaudo/oxfmt": "^0.7.0",
    "@nicolo-ribaudo/oxlint": "^0.16.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "gh-pages": "^6.2.0",
    "sass": "^1.83.4",
    "tsdown": "^0.9.0",
    "typescript": "~5.6.3",
    "vite": "8.0.0-beta.10",
    "vue-tsc": "^2.2.0"
  }
