{
  "name": "better-graphql-playground",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "deploy": "vite build && gh-pages -d dist",
    "typecheck": "vue-tsc --noEmit",
